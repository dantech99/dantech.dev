---
import ButtonChangeTheme from "./ButtonChangeTheme.astro";
import ProjectNav from "@/icons/ProjectNav.astro";
import SkillsNav from "@/icons/SkillsNav.astro";
import AboutNav from "@/icons/AboutNav.astro";
import Home from "@/icons/Home.astro";
import BlogIcon from "@/icons/BlogIcon.astro";
import { AnimatedThemeToggler } from "./magicui/animated-theme-toggler";

interface Items {
  name: string;
  link: string;
  label: string;
  icon: any;
}

const items: Items[] = [
  {
    name: "Proyectos",
    link: "/#proyectos",
    label: "proyectos",
    icon: ProjectNav,
  },
  {
    name: "Sobre mi",
    link: "/aboutme",
    label: "sobre-mi",
    icon: AboutNav,
  },
  {
    name: "Blog",
    link: "/blog",
    label: "blog",
    icon: BlogIcon,
  },
];
---

<!-- desktop  -->
<div class="md:flex justify-between items-center z-40 hidden">
  <div class="flex flex-col justify-center content-center">
    <a
      href="/"
      class="md:text-xl text-2xl dark:text-secondary text-text-primary md:font-medium md:tracking-widest md:flex"
      >Dantech.dev âœ¨</a
    >
    <a href="mailto:dandevtech99@gmail.com">dandevtech99@gmail.com | Colombia</a
    >
  </div>

  <nav class="flex justify-center items-center">
    <ul role="list" class="flex flex-row gap-7 justify-center items-center p-1">
      {
        items.map(({ name, link }) => (
          <li class="p-1 rounded-full">
            <a
              href={link}
              class="md:text-text-primary text-sm  dark:hover:text-yellow-200 hover:text-blue-600  font-medium "
              role="link"
            >
              {name}
            </a>
          </li>
        ))
      }
      <li
        class="bg-[#1E2637] border border-gray-700 rounded-full p-2 flex justify-center"
      >
        <AnimatedThemeToggler client:load />
      </li>
    </ul>
  </nav>
</div>

<!-- navbar mobil -->
<div
  class="fixed bottom-0 left-0 right-0 flex justify-center items-center z-40 md:hidden w-full"
>
  <nav
    class="dark:bg-[#0B1528] bg-white flex justify-center items-center w-full border border-gray-600"
  >
    <ul
      role="list"
      class="flex flex-row md:gap-7 gap-5 justify-center items-center p-3"
    >
      <li
        class="dark:bg-[#1E2637] bg-white border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
        data-microtip-position="top"
        role="tooltip"
        aria-label="Home"
      >
        <a
          href="/"
          class="md:text-base text-sm dark:hover:text-yellow-200 hover:text-blue-600 font-medium"
        >
          <Home class="size-6 stroke-gray-700 dark:stroke-neutral-400" />
        </a>
      </li>
      {
        items.map(({ name, link, label, icon: Icon }) => (
          <li
            class="dark:bg-[#1E2637] bg-white border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
            data-microtip-position="top"
            role="tooltip"
            aria-label={label}
          >
            <a
              href={link}
              class="md:text-base text-sm  dark:hover:text-yellow-200 hover:text-blue-600  font-medium "
              role="link"
            >
              <Icon
                title={name}
                class="md:size-7 size-6 stroke-gray-700 dark:stroke-neutral-400 "
              />
            </a>
          </li>
        ))
      }
      <li
        class="bg-[#1E2637] border border-gray-700 rounded-full flex justify-center p-2"
      >
        <AnimatedThemeToggler client:load />
      </li>
    </ul>
  </nav>
</div>
